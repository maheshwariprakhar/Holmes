<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ForgotPassword">
<ImageView
    android:id="@+id/imageView_forgotPassword_icon"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_gravity="top|center_horizontal|center_vertical"
    android:layout_margin="20dp"
    android:layout_weight="0"
    android:src="@mipmap/ic_launcher_foreground" />

<TextView
    android:id="@+id/textView_forgotPassword_title"
    style="@android:style/TextAppearance.DeviceDefault.Large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:layout_weight="0"
    android:fontFamily="sans-serif"
    android:text="@string/app_name"
    android:textColor="@color/colorPrimaryDark" />

<EditText
    android:backgroundTint="@color/textColor"
    android:textCursorDrawable="@null"
    android:id="@+id/editText_forgotPassword_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:gravity="center"
    android:hint="Enter Email Address"
    android:inputType="textEmailAddress" />

<Button
    android:enabled="false"
    android:id="@+id/btn_forgotPassword_reset"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/button_active"
    android:text="RESET"
    android:textColor="@android:color/white"
    android:textSize="18dp" />

</LinearLayout>