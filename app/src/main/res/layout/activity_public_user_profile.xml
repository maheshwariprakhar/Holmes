<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".PublicUserProfile">

    <ImageView
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_margin="30dp"
        android:background="@drawable/image_round"
        android:id="@+id/imageView_publicUserProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:stretchColumns="1"
        android:layout_height="match_parent">
        <TableRow >
            <TextView android:id="@+id/textView_publicUserProfile_nameLabel"
                android:text="Full Name  :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView android:id="@+id/textView_publicUserProfile_name"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/textView_publicUserProfile_userNameLabel"
                android:text="User Name :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView android:id="@+id/editText_publicUserProfile_userName"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:enabled="false"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />
        </TableRow>


        <TableRow>
            <TextView android:id="@+id/textView_publicUserProfile_userEmailLabel"
                android:text="Email          :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView android:id="@+id/textView_publicUserProfile_email"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">
            <TextView android:id="@+id/textView_publicUserProfile_userAptLabel"
                android:text="Apartment :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView android:id="@+id/textView_publicUserProfile_aptNumber"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>

</LinearLayout>