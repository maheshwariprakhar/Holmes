<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfile">

    <ImageButton
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_margin="30dp"
        android:background="@drawable/image_round"
        android:id="@+id/imageView_userProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:stretchColumns="1"
        android:layout_height="match_parent">
        <TableRow >
            <TextView android:id="@+id/textView_userProfile_nameLabel"
                android:text="Full Name  :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView android:id="@+id/textView_userProfile_name"
                android:textSize="20sp"
                android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1" />
        </TableRow>
        <TableRow>
        <TextView android:id="@+id/textView_userProfile_userNameLabel"
            android:text="User Name :"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0" />

        <EditText android:id="@+id/editText_userProfile_userName"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:enabled="false"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1" />

            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/btn_userProfile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_small"
                android:src="@android:drawable/ic_menu_edit" />
    </TableRow>


        <TableRow>
            <TextView android:id="@+id/textView_userProfile_userEmailLabel"
                android:text="Email          :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView android:id="@+id/textView_userProfile_email"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">
            <TextView android:id="@+id/textView_userProfile_userAptLabel"
                android:text="Apartment :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />

            <TextView android:id="@+id/textView_userProfile_aptNumber"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />
        </TableRow>


        <TableRow android:layout_marginTop="20dp">
            <Button android:id="@+id/btn_userProfile_update"
                android:layout_span="3"
                android:background="@drawable/button_active"
                android:text="Update"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0" />


        </TableRow>
    </TableLayout>

</LinearLayout>