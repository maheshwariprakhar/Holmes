<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EF6C00</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
<item name="android:windowBackground">@drawable/launcher</item>
        
    </style>

   <!-- textview style -->
    <style name="AppIconView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background"></item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#EF6C00</item>
        <item name="android:colorPrimaryDark">#FA5F00</item>
    </style>

</resources>
